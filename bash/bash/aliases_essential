alias bashaliases="vim ~/.bash/; source ~/.bashrc"

# single char
alias v="vim"

# essentials
alias ls="ls -G"
alias l="ls -l"
alias la="ls -la"
alias lt="ls -lt"
alias df="df -h"
alias du="du -h"
alias wget="wget -c"  # continue flag
alias iotop="sudo iotop"

# net
alias pingheise="ping www.heise.de"
alias pinggoogle="ping www.google.com"

# apps
alias g="git"
alias ipy="ipython"
alias vim="vim -p"  # open files in tabs
alias v=vim
alias dc="docker-compose"
complete -o bashdefault -o default -o nospace -F _git g

# mac specific shortcuts
alias notes="open -a notes"
alias todo="open -a reminders"

alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'
